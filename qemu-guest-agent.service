[Unit]
Description=QEMU Guest Agent
IgnoreOnIsolate=True
ConditionVirtualization=apple

[Service]
UMask=0077
EnvironmentFile=/etc/sysconfig/qemu-ga
ExecStart=/usr/bin/qemu-ga \
  --method=vsock-listen \
  --path=3:1234 \
  $FILTER_RPC_ARGS \
  -F${FSFREEZE_HOOK_PATHNAME}
Restart=always
RestartSec=0

[Install]
WantedBy=default.target
